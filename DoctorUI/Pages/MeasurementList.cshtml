@page
@model DoctorUI.Pages.MeasurementListModel
@{
    ViewData["Title"] = "Measurement List";
}

<h1>Measurement List</h1>

<!-- Patient SSN Input -->
<form method="post">
    <label for="patientSSN">Enter Patient SSN:</label>
    <input type="text" id="patientSSN" value="@Model.PatientSSN" />
    <button type="submit">Get Measurements</button>
</form>

<!-- Display Measurements -->
@if (Model.Measurements != null && Model.Measurements.Any())
{
    <table>
        <thead>
            <tr>
                <th>Measurement ID</th>
                <th>Date</th>
                <th>Systolic</th>
                <th>Diastolic</th>
                <th>Seen</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var measurement in Model.Measurements)
            {
                <tr>
                    <td>@measurement.Id</td>
                    <td>@measurement.DateTime.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@measurement.Systolic</td>
                    <td>@measurement.Diastolic</td>
                    <td>@measurement.Seen</td>
                </tr>
            }
        </tbody>
    </table>
}
else if (Model.Measurements != null && !Model.Measurements.Any())
{
    <p>No measurements found for the provided Patient SSN.</p>
}